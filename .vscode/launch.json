{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Flask",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "yaits_api",
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "0"
      },
      "args": ["run", "--no-debugger", "--no-reload"],
      "jinja": true
    },
    {
      "name": "Python: Flask (postgresql)",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "yaits_api",
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "0",
        "IMADETHIS_DB_URI": "postgresql://yaits:yaits@localhost:5432/yaits"
      },
      "args": ["run", "--no-debugger", "--no-reload"],
      "jinja": true
    },
    {
      "name": "Debug Jest",
      "type": "node",
      "request": "launch",
      "address": "localhost",
      "sourceMaps": true,
      "cwd": "${workspaceFolder}/client",
      "disableOptimisticBPs": true,
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceRoot}/client/node_modules/.bin/jest",
        "--runInBand"
      ],
      "port": 9229,
      "env": {
        "NODE_ENV": "test"
      }
    }
  ]
}
